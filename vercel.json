{
    "version": 2,
    "builds": [
        {
            "src": "api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.ts"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/apps/web/dist/assets/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/apps/web/dist/favicon.ico"
        },
        {
            "src": "/robots.txt",
            "dest": "/apps/web/dist/robots.txt"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/web/dist/index.html"
        }
    ]
}